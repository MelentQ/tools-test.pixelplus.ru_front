+ui-component({
  title: "Кнопка",
  tags: ["button", "submit"]
})
  +slot("content")
    +tabs({
      tabs: [
        {
          key: "preview",
          name: "Просмотр"
        },
        {
          key: "mods",
          name: "Модификации"
        },
        {
          key: "state",
          name: "Состояния"
        },
        {
          key: "html",
          name: "HTML"
        },
        {
          key: "pug",
          name: "Pug"
        }
      ]
    })
      +slot("preview")
        include preview
      +slot("mods")
        .d-flex.flex-wrap.align-items-center.gap-m
          +button Default
          +button({mods: ['secondary']}) Secondary
      +slot("state")
        p disabled loading
      +slot("html")
        +code-snippet({lang: 'html'})
          include preview
      +slot("pug")
        +code-snippet({lang: 'pug'})
          include:raw preview
