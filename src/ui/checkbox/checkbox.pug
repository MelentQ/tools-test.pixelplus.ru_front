mixin checkbox(props)
  - props = props || {}
  - mods = props.mods ? props.mods.map(mod => `checkbox--${mod}`).join(" ") : null;
  label.checkbox.js-validation-wrapper(
    class=mods
  )
    input.checkbox__element(
      type="checkbox"
      name=props.name
      checked=props.checked
      required=props.required
    )&attributes(attributes)
    span.checkbox__fake
      svg
        use(xlink:href='#checkbox')
    if block
      span.checkbox__label
        block
