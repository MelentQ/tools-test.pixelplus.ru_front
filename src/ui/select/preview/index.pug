+ui-component({
  title: "Выпадающий список",
  tags: ["dropdown", "селект", "select", "choices.js"]
})
  +slot("content")
    +tabs({
      tabs: [
        {
          key: "preview",
          name: "Просмотр"
        },
        {
          key: "state",
          name: "Состояния"
        },
        {
          key: "html",
          name: "HTML"
        },
        {
          key: "pug",
          name: "Pug"
        }
      ]
    })
      +slot("preview")
        .row.row-4
          .col
            include preview
      +slot("state")
        p state
      +slot("html")
        +code-snippet({lang: 'html'})
          include preview
      +slot("pug")
        +code-snippet({lang: 'pug'})
          include:raw preview
