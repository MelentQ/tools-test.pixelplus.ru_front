  tags: ["vue-app", "primevue", "react"]
})
  +tabs({
    tabs: [
      {
        key: "preview",
        name: "Просмотр"
      },
      {
        key: "html",
        name: "HTML"
      },
      {
        key: "pug",
        name: "Pug"
      }
    ]
  })
    +slot("preview")
      include preview
    +slot("html")
      +code-snippet({lang: 'html'})
        include preview
    +slot("pug")
      +code-snippet({lang: 'pug'})
        include:raw preview
