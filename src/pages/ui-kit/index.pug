extends /src/layout/landing

block content
  +section({
    mods: ["border"],
    title: "UI Kit",
    subtitle: "Для дизайнеров и разработчиков",
    tag: "h1"
  })
    p По умолчанию некоторые теги уже имеют браузерные стили (normalize.css)
    ul
      li Шрифт – <a target="_blank" href="https://fonts.google.com/specimen/Open+Sans"><b>Open Sans</b></a>
      li Стандартный размер шрифта – <b>16px</b>
      li Толщина шрифта – <b>400 (normal)</b>
      li Интерлиньяж (line-height) – <b>130% (1.3)</b>
      li Цвет текста – <b>#333333</b>
      li Цвет бренда - <b style="color: #e32d35;">#e32d35</b>
      li Скругление углов – <b>8px</b>
  +section({
    mods: ["border"],
    title: "Навигация",
    subtitle: "Может помочь браузерный поиск <b>Ctrl + F</b>. У большинства компонентов есть теги для быстрого поиска"
  })
    ol
      li
        a(href="#colors") Цвета
      li
        a(href="#typography") Типографика
      li
        a(href="#layout") Лейаут
      li
        a(href="#components") Компоненты
      li
        a(href="#vue-components") Vue-компоненты
      li
        a(href="#blocks") Блоки
      li
        a(href="#sprite") SVG-спрайт
      li
        a(href="#modals") Модальные окна
  +section({
    mods: ["border"],
    title: "Цвета"
  })&attributes({
    id: "colors"
  })
    +ui-component({
      title: "Цвета"
    })
      +tabs({
        tabs: [
          {
            key: "preview",
            name: "Просмотр"
          },
          {
            key: "css",
            name: "CSS"
          }
        ]
      })
        +slot("preview")
          +ui-colors(colors)
        +slot("css")
          +code-snippet({
            lang: "css"
          })
            | button {
            |   background-color: var(--gray-semi-light);
            | }
  +section({
    mods: ["border"],
    title: "Типографика"
  })&attributes({
    id: "typography"
  })
    | todo
  +section({
    mods: ["border"],
    title: "Лейаут"
  })&attributes({
    id: "layout"
  })
    | todo
  +section({
    mods: ["border"],
    title: "Компоненты",
    subtitle: "Неотъемлемая часть сайта"
  })&attributes({
    id: "components"
  })
    .d-flex.flex-column.gap-5
      include /src/ui/button/preview/index
      include /src/ui/select/preview/index
  +section({
    mods: ["border"],
    title: "Vue-компоненты"
  })&attributes({
    id: "vue-components"
  })
    .d-flex.flex-column.gap-5
      include /src/ui/vue-app/preview/index
      include /src/ui/select/vue-preview/index
  +section({
    mods: ["border"],
    title: "Блоки",
    subtitle: "Независимые секции"
  })&attributes({
    id: "blocks"
  })
    +cards-slider({
      items: ui.blocks,
    })
  +section({
    mods: ["border"],
    title: "SVG-спрайт"
  })&attributes({
    id: "sprite"
  })
    include /src/ui/icon/preview/index
  +section({
    mods: ["border"],
    title: "Модальные окна"
  })&attributes({
    id: "modals"
  })
    .d-flex.flex-wrap.gap-3
      +button&attributes({
        "data-fancybox": "modal",
        "data-src": "#welcome-message-modal"
      }) #welcome-message-modal
      +button&attributes({
        "data-fancybox": "modal",
        "data-src": "#offer-modal"
      }) #offer-modal
      +button&attributes({
        "data-fancybox": "modal",
        "data-src": "#policy-modal"
      }) #policy-modal
      +button&attributes({
        "data-fancybox": "modal",
        "data-src": "#demo-modal"
      }) #demo-modal
      +button&attributes({
        "data-fancybox": "modal",
        "data-src": "#success-modal"
      }) #success-modal
      +button&attributes({
        "data-fancybox": "modal",
        "data-src": "#error-modal"
      }) #error-modal
      +button&attributes({
        "data-fancybox": "modal",
        "data-src": "#warning-modal"
      }) #warning-modal
      +button&attributes({
        "data-fancybox": "modal",
        "data-src": "#reset-password-success-modal"
      }) #reset-password-success-modal
    +code-snippet({lang: "js"})
      | window.pts.Fancybox.close();
      | window.pts.Fancybox.show([{ src: '#welcome-message-modal' }]);

block modals
  +offer-modal
  +policy-modal
  +demo-modal
  +success-modal
  +error-modal
  +warning-modal
  +reset-password-success-modal
