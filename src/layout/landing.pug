include /src/components/index
include /src/widgets/index

doctype html
html(lang="ru")
  head
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    link(href="./favicon.ico" rel="shortcut icon" type="image/x-icon")
    link(href="./css/core.min.css" rel="stylesheet")

    block head
  body.page.js-smooth-scrolling
    #svg-sprite.visually-hidden
      include /src/components/icon/sprite.svg
    .page__inner
      +header&attributes({class: "page__header"})
      main.page__content
        block content
      +footer&attributes({class: "page__footer"})
      +scroll-to-top&attributes({class: "page__scroll-to-top"})
      +multi-button({
        items: multiButtons
      })&attributes({class: "page__multi-button"})
    script(src="https://code.jquery.com/jquery-3.7.1.min.js")
    script
      include ./iti.js
    script(src="./js/core.min.js")
