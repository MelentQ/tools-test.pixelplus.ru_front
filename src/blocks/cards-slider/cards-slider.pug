mixin cards-slider(props)
  - props = props || {}
  .cards-slider.js-cards-slider
    .cards-slider__slider.swiper.loader
      .cards-slider__slider-wrapper.swiper-wrapper
        for item in props.items
          .cards-slider__slide.swiper-slide
            +cs-card(item)
    +slider-navigation&attributes({class: "cards-slider__navigation"})
    +slider-pagination&attributes({class: "cards-slider__pagination"})
  link(href="./css/cards-slider.min.css" rel="stylesheet")
  script(src="./js/cards-slider.min.js" defer="")
