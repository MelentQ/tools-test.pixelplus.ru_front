mixin tariffs(props, section)
  - props = props || {}
  +section(section)
    .tariffs.js-tariffs(data-initial-slide=props.initialSlide)
      .tariffs__list
        .tariffs__slider.swiper.loader
          .tariffs__slider-wrapper.swiper-wrapper
            for item in props.items
              .tariffs__card.swiper-slide(
                class=(item.isAccent ? "tariffs__card--accent" : null)
              )
                +tariffs-card({
                  ...item,
                  mods: section.mods && section.mods.includes("dark") ? item.mods ? [...item.mods, "light"] : ["light"] : item.mods
                })
        +slider-pagination&attributes({class: "tariffs__pagination"})
      .tariffs__guarantee
        .tariffs__guarantee-card
          .tariffs__guarantee-accent 100% гарантия
          .tariffs__guarantee-label возврата средств
        .tariffs__guarantee-caption * — в течение 7 дней после покупки тарифа
    link(href="./css/tariffs.min.css" rel="stylesheet")
    script(src='./js/tariffs.min.js')
