mixin sprite-list(props, section)
  - props = props || {}
  +section(section)
    .sprite-list
      p=`Всего: ${props.items.length} (${Math.round(props.size * 100 / 1024) / 100} Кб)`
      .sprite-list__list
        for item in props.items
          +sl-card(item)
    link(href="./css/sprite-list.min.css" rel="stylesheet")
    script(src="./js/sprite-list.min.js")
